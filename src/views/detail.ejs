<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', title) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Detalle del producto: <%= name %> </h2>
			</div>
		</div>
		<div class="product-detail">
			<div class="row">
				<div class="col-12 col-lg-8">
					<img src="/images/products/<%= image===null? 'default-image.png' : image %>" alt="product image" class="product-detail-img">
					<p class="product-detail-description">
						<%= description %> 
					</p>
				</div>
				<div class="col-12 col-lg-4">
					<article class="product-detail-info">
						<h2 class="product-detail-title"><%= name %> </h2>
						
							<% if (discount) { %>
							 <p class="product-detail-price small">
								<span>$<%= toThousand(price) %> </span>
								/
								<b><%= discount %>% OFF</b>
							</p>
							<p class="product-detail-price">
								$<%= toThousand(price - (price * discount) / 100) %>
							</p>
							<% } else { %>
							 <p class="product-detail-price">
								$<%= toThousand(price) %> 
							</p>
							
							<% } %>
							

						<ul class="actions-list">
							<li>
								<i class="fas fa-credit-card"></i>
								<p>Pagá en 12 cuotas sin interes</p>
							</li>
							<li>
								<i class="fas fa-store"></i>
								<p>Retiro gratis en locales del vendedor</p>
							</li>
						</ul>

						<a href="#" class="buy-now-button">COMPRAR AHORA</a>
						<hr>

						<a href="/products/edit/<%= id %>" class="action-button edit">EDITAR PRODUCTO</a>
						
						<button onclick="deleteConfirm()" type="" class="action-button delete">ELIMINAR</button>
						<!-- <form action="/products/delete/<%= id %>?_method=DELETE" method="POST" style="display: inline-flex">
							
						</form> -->

					</article>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
	<!-- SweetAlert2 -->
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.2/dist/sweetalert2.all.min.js"></script>
	<%=  %>
	<script>
		const deleteConfirm = ()=>{
Swal.fire({
  	title: 'Vas a eliminar el producto',
  	text: '¿Estas seguro?',
  	icon: 'warning',
	html: '<h2>¿Estas seguro?</h2><form action="/products/delete/<%= id %>?_method=DELETE" method="POST" style="display: inline-flex"><button type="submit" class="action-button delete">SI, ELIMINAR</button></form>',
	showConfirmButton: false
	})

}
	</script>
</body>	
</html>